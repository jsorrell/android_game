<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jsorrell.topicsgame.FriendsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Find Friends"
            android:id="@+id/create_topic_button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.20"
            android:onClick="gotoFindFriends" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:id="@+id/friends_button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.20"
            android:onClick="gotoFriends" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Pending Friends"
            android:id="@+id/games_button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.20"
            android:onClick="gotoPendingFriends" />
    </LinearLayout>
</RelativeLayout>
