<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jsorrell.topicsgame.FriendsActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friends_list_view"
        android:layout_centerHorizontal="true"
        android:choiceMode="none"
        android:layout_below="@+id/find_friend_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Friend"
        android:id="@+id/find_friend_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="findFriendPressed" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_alignTop="@+id/find_friend_button"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/find_friend_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/select_friends_done"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="finishSelectingFriends"/>
</RelativeLayout>
